<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpPage">


  <EditText
      android:id="@+id/PasswordofSignUpPage"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:background="@drawable/input_background"
      android:drawableLeft="@drawable/ic_security"
      android:drawablePadding="10dp"
      android:ems="10"
      android:textColorHint="@color/black"
      android:textColor="@color/black"
      android:hint="請輸入密碼(6~12字元)"
      android:inputType="textPassword"
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="@+id/EmailofSignUpPage"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/EmailofSignUpPage"
      app:layout_constraintTop_toBottomOf="@+id/EmailofSignUpPage" />

  <EditText
      android:id="@+id/ConfirmPasswordofSignUpPage"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:background="@drawable/input_background"
      android:drawableLeft="@drawable/ic_security"
      android:drawablePadding="10dp"
      android:ems="10"
      android:textColorHint="@color/black"
      android:textColor="@color/black"
      android:hint="再次輸入密碼"
      android:inputType="textPassword"
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="@+id/PasswordofSignUpPage"
      app:layout_constraintStart_toStartOf="@+id/PasswordofSignUpPage"
      app:layout_constraintTop_toBottomOf="@+id/PasswordofSignUpPage" />


  <Button
      android:id="@+id/BeCareButton"
      android:layout_width="wrap_content"
      android:layout_height="58dp"
      android:layout_margin="10dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="48dp"
      android:layout_marginRight="48dp"
      android:layout_weight="1"
      android:background="@drawable/button_background"
      android:text="以被照顧者登入"
      android:textColor="@color/black"
      android:textSize="15dp"
      app:backgroundTint="@color/purple_200"
      app:layout_constraintEnd_toEndOf="@+id/ConfirmPasswordofSignUpPage"
      app:layout_constraintTop_toBottomOf="@+id/ConfirmPasswordofSignUpPage" />


  <Button
      android:id="@+id/TakeCareButton"
      android:layout_width="wrap_content"
      android:layout_height="62dp"
      android:layout_margin="10dp"
      android:layout_marginStart="12dp"
      android:layout_marginLeft="12dp"
      android:layout_marginTop="24dp"
      android:layout_weight="1"
      android:background="@drawable/button_background"
      android:text=" 以照顧者登入 "
      android:textColor="@color/black"
      android:textSize="15dp"
      app:backgroundTint="@color/purple_200"
      app:layout_constraintStart_toStartOf="@+id/ConfirmPasswordofSignUpPage"
      app:layout_constraintTop_toBottomOf="@+id/ConfirmPasswordofSignUpPage" />

  <TextView
      android:id="@+id/SignUpText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="用戶資料"
      android:textColor="@color/black"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/TempIcon"
      app:layout_constraintStart_toStartOf="@+id/TempIcon"
      app:layout_constraintTop_toBottomOf="@+id/TempIcon" />

  <ImageView
      android:id="@+id/TempIcon"
      android:layout_width="151dp"
      android:layout_height="143dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.13999999"
      app:srcCompat="@drawable/ic_mainic" />


  <EditText
      android:id="@+id/UsernameofSignUpPage"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      android:layout_marginLeft="40dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="40dp"
      android:layout_marginRight="40dp"
      android:background="@drawable/input_background"
      android:drawableLeft="@drawable/ic_person"
      android:drawablePadding="10dp"
      android:ems="10"
      android:textColor="@color/black"
      android:textColorHint="@color/black"
      android:hint="請輸入姓名"
      android:inputType="textPersonName"
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/SignUpText" />

  <EditText
      android:id="@+id/EmailofSignUpPage"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:background="@drawable/input_background"
      android:drawableLeft="@drawable/ic_email"
      android:drawablePadding="10dp"
      android:ems="10"
      android:textColorHint="@color/black"
      android:hint="請輸入信箱"
      android:textColor="@color/black"
      android:inputType="textEmailAddress"
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="@+id/UsernameofSignUpPage"
      app:layout_constraintStart_toStartOf="@+id/UsernameofSignUpPage"
      app:layout_constraintTop_toBottomOf="@+id/UsernameofSignUpPage" />


</androidx.constraintlayout.widget.ConstraintLayout>